#!/bin/bash
cd "$(dirname "$0")/.."

mv ./bin/install ./bin/__install__

rm -rf .git
git init
cp docker-compose.example.yml docker-compose.local.yml
ln -s docker-compose.local.yml docker-compose.yml
cp .env.example .env.local
ln -s .env.local .env
cp .gitignore.example .gitignore
cd src
cp .env.example .env.local
ln -s .env.local .env
